<UserControl x:Class="BuildYourBowl.PointOfSale.OrderSummaryControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuildYourBowl.PointOfSale"
        mc:Ignorable="d"
        d:DesignHeight="720" Width="200">
    
        <DockPanel Grid.Row="0" Margin="10">
            <TextBlock DockPanel.Dock ="Top" Text="Order number: 1" FontSize="16"/>
            <TextBlock DockPanel.Dock ="Top" Text="Date: 3/1/2024" FontSize="16"/>

            <TextBlock DockPanel.Dock ="Bottom" Text="Subtotal: XX" FontSize="16"/>
            <TextBlock DockPanel.Dock ="Bottom" Text="Tax: XX" FontSize="16"/>
            <TextBlock DockPanel.Dock ="Bottom" Text="Total: XX" FontSize="16"/>
            <ListView ItemsSource="{Binding}"/>

        </DockPanel>
</UserControl>
